                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><img class="graficlogo" src="/img/logo.png" alt="lgo"></a>
                    
                    @if (User.Identity.IsAuthenticated) 
                    {
                        <div class="buttons-logon-logoff">
                            <input class="input-logon-logof" type="button" value="ВЫХОД" onclick="location.href='@Url.Action("LogOff", "Auth")'" />
                        </div>                        
                    }
                    else
                    {
                        <div class="buttons-logon-logoff">
                            <div>
                                <input class="input-logon-logof" type="button" value="Вход" onclick="location.href='@Url.Action("Index", "User")'" />
