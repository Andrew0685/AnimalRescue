            <nav>
                <div class="topnav">
                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">ГЛАВНАЯ</a>
                    <a class="nav-link text-dark" asp-controller="Post" asp-action="AddPost">РАЗМЕСТИТЬ ОБЪЯВЛЕНИЕ</a>
                    <a class="nav-link text-dark" asp-controller="Shelter" asp-action="Index">ПРИЮТЫ</a>
                </div>
            </nav>

            @if (User.Identity.IsAuthenticated)
            {
                <nav class="small-nav">
                    <div class="topnav-small-nav">
                        @if (User.IsInRole("admin"))
                        {
                            <a asp-controller="Admin" asp-action="Index">ПРОФИЛЬ</a>
                            <a class="nav-link text-dark" asp-controller="Shelter" asp-action="AddShelter">ДОБАВИТЬ ПРИЮТ</a>
                            <a class="nav-link text-dark" asp-controller="Post" asp-action="DisplayUserPosts">МОИ ОБЪЯВЛЕНИЯ</a>
                            <a class="nav-link text-dark" asp-controller="User" asp-action="DisplayUsers">СПИСОК ПОЛЬЗОВАТЕЛЕЙ</a>
                        }
                        else if (User.IsInRole("user"))
                        {
                            <a asp-controller="User" asp-action="Index">МОЙ ПРОФИЛЬ</a>
                            <a class="nav-link text-dark" asp-controller="Post" asp-action="DisplayUserPosts">МОИ ОБЪЯВЛЕНИЯ</a>
                            <a class="nav-link text-dark" asp-controller="Favorites" asp-action="DisplayFavorites">ИЗБРАННОЕ</a>
                        }
                    </div>
                </nav>
            }
            
        </div>
