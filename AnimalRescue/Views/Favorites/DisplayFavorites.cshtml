@model FavoriteModel
@{
    var favorites = (List<FavoriteModel>)ViewData["UserFavorites"];
}

<div class="chapter-title">
    <h1>Избранное</h1>
</div>


<div>
    @foreach(var item in favorites)
    {
        <div class="declaration">
            <div class="header-content">
                <form asp-controller="Favorites" asp-action="DeleteFavorite" asp-route-id="@item.AnimalId" method="post" name="DeleteFavorite">
                    <input type="hidden" asp-for="AnimalId" value=@item.AnimalId />
                    <input class="input-logon-logof" type="submit" value="Удалить" />
                </form>
            </div>            

            <div class="pet-photo">
                <img src='@Url.Content($"~/Repo/Animals/{item.ShelterId}/{item.PhotoFileName}")' class="image-pet" alt="photo">
            </div>
            <div class="params">
                <div>
                    <a class="description">@item.Name</a>
                </div>
                <div>
                    <a class="description">@item.Type</a>
                </div>
                <div>
                    <a class="description">@item.Age</a>
                </div>
                <div>
                    <a class="description">@item.Gender</a>
                </div>
                <div>
                    <a class="description">@item.ShelterTitle</a>
                </div>
                <div>
                    <a class="description">@item.Address</a>
                </div>
                <div>
                    <a class="description">@item.Description</a>
                </div> 
            </div>
        </div>        
    }
</div>